#!/usr/bin/env php
<?php

use Ivan1986\DevContainer\Command\AnsibleCommand;
use Ivan1986\DevContainer\Command\RebuildCommand;
use Ivan1986\DevContainer\Command\SshCommand;
use Ivan1986\DevContainer\Command\UpCommand;
use Symfony\Component\Console\Application;

function includeIfExists($file)
{
    if (file_exists($file)) {
        return include $file;
    }
}

if ((!$loader = includeIfExists(__DIR__.'/../vendor/autoload.php')) && (!$loader = includeIfExists(__DIR__.'/../../../autoload.php'))) {
    die('You must set up the project dependencies, run the following commands:'.PHP_EOL.
        'curl -sS https://getcomposer.org/installer | php'.PHP_EOL.
        'php composer.phar install'.PHP_EOL);
}

$application = new Application('Container manager');
$application->add(new UpCommand());
$application->add(new RebuildCommand());
$application->add(new SshCommand());
$application->add(new AnsibleCommand());
$application->run();
